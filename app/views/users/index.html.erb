<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="text-center">
        <h3>Users</h3>
      </div>
      <hr>
      <ul class="list-group">
        <% @users.each do |user| %>

        <li class="list-group-item list-group-item-warning">
          <% if user.profile != nil %>
          <%= user.profile.full_name %>

          <p class="pull-right">

            <% if user.admin == true %>
            <span class="label label-danger">Admin</span>
            <% elsif user.teacher %>
            <span class="label label-success">Teacher</span>
          <% else %>
            <span class="label label-default">Student</span>
            <% end %>

            <%= link_to "", user_path(user.id), class: "btn icon-pencil" %>
          </p>
        <% else %>
          <%= user.email %>
          <p class="pull-right">

            <% if user.admin == true %>
            <span class="label label-danger">Admin</span>
            <% elsif user.teacher %>
            <span class="label label-success">Teacher</span>
          <% else %>
            <span class="label label-default">Student</span>
            <% end %>

            <%= link_to "", user_path(user.id), class: "btn icon-pencil" %>
          </p>
          <% end %>
        </li>

        <% end %>
      </ul>

    </div>
  </div>
</div>
