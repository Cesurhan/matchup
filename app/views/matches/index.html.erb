<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if user_signed_in? && current_user.admin?%>
      <ul class="list-group">
        <% @matches.each do |match| %>

        <% @user_id = match.user_id %>
        <% @match_id = match.match_id %>

        <% @user = User.find_by id: @user_id %>
        <% @match = User.find_by id: @match_id %>

        <li class="list-group-item list-group-item-warning">
          <% if @user.profile != nil %>
          <%= @user.profile.full_name %>
        <% else %>
          <%= @user.email %>
          <% end %>
          <% if @match.profile != nil %>
          <p class="pull-right"><%= @match.profile.full_name %>
            <%= link_to "", root_path, class: "btn icon-pencil" %>
          </p>
        <% else %>
          <p class="pull-right"><%= @match.email %>
            <%= link_to "", root_path, class: "btn icon-pencil" %></p>
          <% end %>
        </li>

        <% end %>
      </ul>
    <% else %>
      <h3>You are not authorized to be on this page!</h3>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
